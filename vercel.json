{
  "version": 3,
  "framework": null,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/**/*"] }
    },
    {
      "src": "frontend/vite.config.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
